<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Brushes -->
    <SolidColorBrush x:Key="ThemeWindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ThemeControlBackgroundBrush" Color="#2D2D30"/> <!-- Slightly lighter dark for ToolBar/StatusBar -->
    <SolidColorBrush x:Key="ThemeForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="#434346"/>

    <!-- ScrollBar Specific Brushes -->
    <SolidColorBrush x:Key="ThemeScrollBarBackgroundBrush" Color="#2E2E2E" /> 
    <SolidColorBrush x:Key="ThemeScrollBarDisabledBackgroundBrush" Color="#3E3E42" />
    <SolidColorBrush x:Key="ThemeScrollBarGlyphBrush" Color="#A0A0A0" />
    <SolidColorBrush x:Key="ThemeScrollBarThumbBackgroundBrush" Color="#555555" />
    <SolidColorBrush x:Key="ThemeScrollBarThumbMouseOverBackgroundBrush" Color="#6A6A6A" />
    <SolidColorBrush x:Key="ThemeScrollBarThumbDraggingBackgroundBrush" Color="#7A7A7A" />

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ThemeButtonBackgroundBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="ThemeButtonBorderBrush" Color="#555555"/>
    <SolidColorBrush x:Key="ThemeButtonMouseOverBackgroundBrush" Color="#4F4F56"/>
    <SolidColorBrush x:Key="ThemeButtonPressedBackgroundBrush" Color="#5A5A63"/>
    <SolidColorBrush x:Key="ThemeButtonDisabledBackgroundBrush" Color="#3E3E42" />
    <SolidColorBrush x:Key="ThemeButtonDisabledForegroundBrush" Color="#6A6A6A" />
    <SolidColorBrush x:Key="ThemeButtonDisabledBorderBrush" Color="#4A4A4E" />

</ResourceDictionary> 
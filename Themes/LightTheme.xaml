<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Brushes -->
    <SolidColorBrush x:Key="ThemeWindowBackgroundBrush" Color="#EDEDED"/>
    <SolidColorBrush x:Key="ThemeControlBackgroundBrush" Color="#DCDCDC"/> <!-- Slightly darker for ToolBar/StatusBar -->
    <SolidColorBrush x:Key="ThemeForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="#ABADB3"/>

    <!-- ScrollBar Specific Brushes -->
    <SolidColorBrush x:Key="ThemeScrollBarBackgroundBrush" Color="#F0F0F0" /> 
    <SolidColorBrush x:Key="ThemeScrollBarDisabledBackgroundBrush" Color="#F4F4F4" />
    <SolidColorBrush x:Key="ThemeScrollBarGlyphBrush" Color="#606060" />
    <SolidColorBrush x:Key="ThemeScrollBarThumbBackgroundBrush" Color="#CDCDCD" />
    <SolidColorBrush x:Key="ThemeScrollBarThumbMouseOverBackgroundBrush" Color="#A6A6A6" />
    <SolidColorBrush x:Key="ThemeScrollBarThumbDraggingBackgroundBrush" Color="#A6A6A6" />

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ThemeButtonBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ThemeButtonBorderBrush" Color="#ABADB3"/>
    <SolidColorBrush x:Key="ThemeButtonMouseOverBackgroundBrush" Color="#E6E6E6"/>
    <SolidColorBrush x:Key="ThemeButtonPressedBackgroundBrush" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="ThemeButtonDisabledBackgroundBrush" Color="#F4F4F4" />
    <SolidColorBrush x:Key="ThemeButtonDisabledForegroundBrush" Color="#888888" />
    <SolidColorBrush x:Key="ThemeButtonDisabledBorderBrush" Color="#D1D1D1" />

</ResourceDictionary> 